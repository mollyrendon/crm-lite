{{! Search Customer}}
<section>
    <h2>Search Customer</h2>
    <br>
<div class="search">
    <input id="searchCustomer" type="text" placeholder="Type in Customer's Name">
</div>
<br>
<div class="customer">
    <button type="submit" class="btn">Search</button>
</div>
</section>


{{! All Customers}}
<h2>All Customers</h2>
<br>
<div class="container">
<div class="row">
<table>
    <thead>
        <tr>
            <th class="col-sm-2">
                First Name
            </th>
            <th class="col-sm-2">
                Last Name
            </th>
             <th class="col-sm-2">
                Email
            </th>
             <th class="col-sm-4">
                Phone Number
            </th>
             <th class="col-sm-2">
                Is Customer
            </th>
            <th>
                Delete
            </th>
        </tr>
    </thead>
    </div>
    </div>

    <div class="container">
    <div class="row">
    <tbody>
        {{#each customers}}
        <tr>
            <td class="col-sm-2">
                {{first_name}}
            </td>
            <td class="col-sm-2">
                {{last_name}}
            </td>
             <td class="col-sm-2">
                {{email}}
            </td>
             <td class="col-sm-4">
                {{phone_number}}
            </td>
             <td class="col-sm-2">
                {{is_customer}}
            </td>
            <td>
                <button class="delete-button" data-id="{{id}}">Delete</button>
            </td>
        </tr>
        {{/each}}
        
    </tbody>
</table>
</div>
</div>

<script src="/javascript/logout.js"></script>
<script src="/javascript/delete-customers.js"></script>